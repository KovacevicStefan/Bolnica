@model arhitektura_projekat.Models.Pacijent

@{
    ViewData["Title"] = "Detalji o Pacijentu";
}

<div>
    <div>
        <div class="container my-5" style="display: flex; justify-content: center;">
            <div class="card shadow-sm border-primary" style="width: 50%;">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">Detalji o Pacijentu</h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="@Html.DisplayFor(model => model.Slika)" alt="Slika pacijenta" class="img-fluid rounded" style="max-height: 200px;">
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-md-8" style="text-align: left;">
                            <p style="margin-left: 50px;">
                                <b>Ime:</b> &nbsp; @Html.DisplayFor(model => model.Ime) <br>
                                <b>Prezime:</b> &nbsp; @Html.DisplayFor(model => model.Prezime) <br>
                                <b>Zdravstveno osiguranje:</b> &nbsp; @Html.DisplayFor(model => model.Zdr_osiguranje) <br>
                                <b>Datum roÄ‘enja:</b> &nbsp; @Html.DisplayFor(model => model.DatumRodjenja) <br>
                                <b>Odeljenje:</b> &nbsp; @Html.DisplayFor(model => model.Odeljenje.Naziv) <br>
                                <b>Dijagnoza:</b> &nbsp; @Html.DisplayFor(model => model.Dijagnoza.Naziv)
                            </p>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    @if (User.IsInRole("Admin"))
                    {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mx-2">Izmeni</a>
                    }
                    <a href="/Pacijent" class="btn btn-secondary mx-2">Nazad na listu</a>
                </div>
            </div>
        </div>
    </div>
</div>
