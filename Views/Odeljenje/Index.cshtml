@model IEnumerable<arhitektura_projekat.Models.Odeljenje>

<div>
    <div>
        <div class="container wh-100 mb-4">
            <h2 class="text my-4">Odeljenja</h2>
            @if (User.IsInRole("Admin"))
            {
                <div class="text">
                    <a asp-action="Create" class="btn btn-primary">Dodaj novo odeljenje</a>
                </div>
            }
            <div class="row pt-5 m-auto">
                @foreach (var odeljenje in Model)
                {
                    <div class="col-md-6 col-lg-4 pb-4">
                        <div class="card card-custom bg-white border-white border-0">
                            <div class="card-custom-img" style="background-image: url(@odeljenje.Slika);"></div>
                            <div class="card-body" style="overflow-y: auto">
                                <h4 class="card-title">@odeljenje.Naziv</h4>
                                <p class="card-text">
                                    <b>Lokacija:</b> @odeljenje.Lokacija <br>
                                    <b>Bolnica:</b> @odeljenje.Bolnica.Naziv
                                </p>
                            </div>
                            <div class="card-footer mb-4" style="background: inherit; border-color: inherit;">
                                @if (User.Identity.IsAuthenticated)
                                {
                                <a asp-action="Details" asp-route-id="@odeljenje.Id" class="btn btn-primary mr-10">Detalji</a>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                <a asp-action="Edit" asp-route-id="@odeljenje.Id" class="btn btn-primary mr-10">Izmeni</a>
                                <a asp-action="Delete" asp-route-id="@odeljenje.Id" class="btn btn-danger mr-10">Obri≈°i</a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
