@model arhitektura_projekat.Models.Dijagnoza

@{
    ViewData["Title"] = "Obriši dijagnozu";
}

<div>
    <div>
        <div class="container my-5" style="display: flex; justify-content: center;">
            <div class="card shadow-sm border-danger" style="width: 50%;">
                <div class="card-header bg-danger text-white">
                    <h2 class="text-center mb-0">Obriši dijagnozu</h2>
                </div>
                <div class="card-body">
                    <h4 class="text-danger">Da li ste sigurni da želite da obrišete ovu dijagnozu?</h4>
                    <p><b>Naziv:</b> @Model.Naziv <br>
                    <b>Opis:</b> @Model.Opis <br>
                    <b>Oznaka:</b> @Model.Oznaka</p>
                </div>
                <div class="card-footer">
                    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger">Obriši</button>
                            <a asp-action="Index" class="btn btn-secondary">Odustani</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
